%h2
  Update profile
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %div
    = f.label :username
    %br
    = f.text_field :username, :autofocus => true
  %div
    = f.label :email
    %br
    = f.email_field :email
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %div
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br
    = f.password_field :password, :autocomplete => "off"
  %div
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br
    = f.password_field :current_password
  %div
    = f.label :avatar
    %br
    = f.select :avatar, options_for_select(AvatarEnum.options(image_picker={:path => '/avatars'}), resource.avatar)
  %div= f.submit "Update"
/ %h3 Cancel account
/ %p
/   #{button_to "I want to delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
= link_to "Back", :back
