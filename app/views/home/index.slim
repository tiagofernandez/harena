        .col-lg-2
          = image_tag 'emblems/DW-Emblem-hd.png', :class => 'emblem large'
        .col-lg-2
          = image_tag 'emblems/OR-Emblem-hd.png', :class => 'emblem large'
        .col-lg-2
          = image_tag 'emblems/TF2a-Emblem-hd.png', :class => 'emblem large'
        .col-lg-2
