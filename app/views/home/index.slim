- if signed_in?
  .main-body
    .container
      .row
        .col-lg-12
          tabset
            tab
              tab-heading
                i.glyphicon.glyphicon-home
                span.tab-title Home
              .tab-body
                | Tournaments! Tournaments for everybody!
            tab
              tab-heading
                i.glyphicon.glyphicon-tower
                span.tab-title New Tournament
              .tab-body
                form name='newTournamentForm' ng-controller='TournamentsController' novalidate='true'
                  .container
                    .row
                      .col-lg-4
                        .form-group
                          label Kind
                          select.form-control name='kind'
                            option value='SRR' Round-robin
                    .row
                      .col-lg-4
                        .form-group
                          label Title
                          input.form-control type='text' name='title' placeholder='Enter an unique title' ng-model='title' ng-minlength='10' ng-maxlength='40' ng-pattern='/^[\w\s\-\_]+$/i'
                          .error-message ng-show='newTournamentForm.title.$error.minlength'
                            | Enter at least 10 characters.
                          .error-message ng-show='newTournamentForm.title.$error.maxlength'
                            | Enter at most 40 characters.
                          .error-message ng-show='newTournamentForm.title.$error.pattern'
                            | Use only letters, numbers, dashes, and underscores.
                    .row
                      .col-lg-8
                        .form-group
                          label Rules
                          textarea.form-control rows='10' maxlength='1024' placeholder='Describe the rules that participants must follow.' ng-model='rules'
                    .row
                      .col-lg-4
                        button.btn.btn-primary Create

- else
